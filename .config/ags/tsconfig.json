{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "module": "ES2022",
        "target": "ES2020",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "ags/gtk4",
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "resource://*": [
                "./*"
            ],
            "react": [
                "./node_modules/@types/react"
            ]
        },
        "noImplicitAny": false,
        "experimentalDecorators": false,
        "typeRoots": [
            "./@girs"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.js",
        "types/**/*.d.ts"
    ]
}
