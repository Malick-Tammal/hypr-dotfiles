//---------------------------------------------------------
//--  HACK: Walli "Wallpaper switcher"
//---------------------------------------------------------

// Importing shared colors ---
@import "~/.shared/rofi/colors.rasi"
@import "~/.shared/rofi/fonts.rasi"

// Configuration ---
configuration {
    show-icons:             true;

    me-select-entry:        "";
    me-accept-entry:        "MousePrimary";

    kb-mode-complete:       "";
    kb-remove-char-back:    "BackSpace";
    kb-remove-to-eol:       "";

    kb-row-up:              "h";
    kb-row-down:            "l";
    kb-accept-entry:        "k,Return";
}

* {
	background-color:       @BG;
}

// Main Window  ---
window {
    width:                  100%;
    height:                 350px;
    border:                 1px;
    border-color:           @BOR;
    border-radius:          8px;
    margin:                 10px;
    location:               north;
    anchor:                 north;
    background-color:       @BG;
    padding:                20px 0px 0px 20px;
}

// Main Box ---
mainbox {
	children:               ["listview"];

}

// Listview
listview {
    columns:                1;
    lines:                  6;
    spacing:                20px;
    cycle:                  true;
    dynamic:                true;
    layout:                 horizontal;
    scrollbar:              false;
	expand:                 true;
	background-color:       transparent;
    fixed-height:           true;
    fixed-columns:          true;
    scrollbar:              false;
}

// Elements
element {
    border-radius:          4px;
    text-color:             @FG;
    padding:                0px;
    margin:                 0px;
    width:                  229px;
    orientation:            vertical;
    expand:                 true;
    border:                 0px;
}

element-icon {
    background-color:       @DARK2;
    size:                   288px;
    cursor:                 pointer;
	border-radius: 	        5px;
    expand:                 true;
    border:                 0px;
    padding:                0px;
    margin:                 0px;
    expand:                 true;
}

element selected {
    border:                 4px;
    border-color:           @SEL-BG;
}

element-text {
	enabled:                false;
}

// Inputbar ---
inputbar {
	enabled:                false;
}

